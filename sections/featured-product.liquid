<section class="featured-product" style="background-color: {{ section.settings.background_color }}">
  {% if section.settings.title %}
  <h2 class="product-section-title">{{ section.settings.title }}</h2>
  {% endif %}
  {% if section.settings.subtitle %}
  <p class="product-section-subtitle">{{ section.settings.subtitle }}</p>
  {% endif %}

  <div class="product-grid">
    {% if section.settings.product1 %}
    <div class="product-item">
      <a href="{{ section.settings.product1.url }}" class="product-link">
        <!-- Product Image -->
        <div class="product-image-container {{ section.settings.image_shape }}">
          <img src="{{ section.settings.product1.featured_image | img_url: '600x600' }}" alt="{{ section.settings.product1.title }}" class="product-image" />
        </div>

        <!-- Product Title -->
        <h3 class="product-title">{{ section.settings.product1.title }}</h3>

        <!-- Product Price -->
        {% if section.settings.product1.compare_at_price > section.settings.product1.price %}
        <p class="product-price">
          <span class="current-price">{{ section.settings.product1.price | money }}</span>
          <span class="original-price">{{ section.settings.product1.compare_at_price | money }}</span>
        </p>
        {% else %}
        <p class="product-price">{{ section.settings.product1.price | money }}</p>
        {% endif %}
      </a>
    </div>
    {% else %}
    <p>No product selected</p>
    {% endif %}

    {% if section.settings.product2 %}
    <div class="product-item">
      <a href="{{ section.settings.product2.url }}" class="product-link">
        <!-- Product Image -->
        <div class="product-image-container {{ section.settings.image_shape }}">
          <img src="{{ section.settings.product2.featured_image | img_url: '600x600' }}" alt="{{ section.settings.product2.title }}" class="product-image" />
        </div>

        <!-- Product Title -->
        <h3 class="product-title">{{ section.settings.product2.title }}</h3>

        <!-- Product Price -->
        {% if section.settings.product2.compare_at_price > section.settings.product2.price %}
        <p class="product-price">
          <span class="current-price">{{ section.settings.product2.price | money }}</span>
          <span class="original-price">{{ section.settings.product2.compare_at_price | money }}</span>
        </p>
        {% else %}
        <p class="product-price">{{ section.settings.product2.price | money }}</p>
        {% endif %}
      </a>
    </div>
    {% else %}
    <p>No product selected</p>
    {% endif %}

    {% if section.settings.product3 %}
    <div class="product-item">
      <a href="{{ section.settings.product3.url }}" class="product-link">
        <!-- Product Image -->
        <div class="product-image-container {{ section.settings.image_shape }}">
          <img src="{{ section.settings.product3.featured_image | img_url: '600x600' }}" alt="{{ section.settings.product3.title }}" class="product-image" />
        </div>

        <!-- Product Title -->
        <h3 class="product-title">{{ section.settings.product3.title }}</h3>

        <!-- Product Price -->
        {% if section.settings.product3.compare_at_price > section.settings.product3.price %}
        <p class="product-price">
          <span class="current-price">{{ section.settings.product3.price | money }}</span>
          <span class="original-price">{{ section.settings.product3.compare_at_price | money }}</span>
        </p>
        {% else %}
        <p class="product-price">{{ section.settings.product3.price | money }}</p>
        {% endif %}
      </a>
    </div>
    {% else %}
    <p>No product selected</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
"name": "Featured Product",
"settings": [
{
"type": "text",
"id": "title",
"label": "Title",
"default": "Featured Product"
},
{
"type": "text",
"id": "subtitle",
"label": "Subtitle",
"default": "Our top picks for you"
},
{
"type": "color",
"id": "background_color",
"label": "Background Color",
"default": "#ffffff"
},
{
"type": "product",
"id": "product1",
"label": "Select Product 1"
},
{
"type": "product",
"id": "product2",
"label": "Select Product 2"
},
{
"type": "product",
"id": "product3",
"label": "Select Product 3"
},
{
"type": "select",
"id": "image_shape",
"label": "Image Shape",
"options": [
{
"value": "circle",
"label": "Circle"
},
{
"value": "blob",
"label": "Blob"
},
{
"value": "square",
"label": "Square"
}
],
"default": "square"
},
{
"type": "range",
"id": "padding_top",
"label": "Padding Top",
"default": 20,
"min": 0,
"max": 100,
"step": 1
},
{
"type": "range",
"id": "padding_right",
"label": "Padding Right",
"default": 20,
"min": 0,
"max": 100,
"step": 1
},
{
"type": "range",
"id": "padding_bottom",
"label": "Padding Bottom",
"default": 20,
"min": 0,
"max": 100,
"step": 1
},
{
"type": "range",
"id": "padding_left",
"label": "Padding Left",
"default": 20,
"min": 0,
"max": 100,
"step": 1
}
],
"presets": [
{
"name": "Featured Product",
"category": "Product"
}
]
}
{% endschema %}
