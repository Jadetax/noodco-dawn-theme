<div class="image-banner" style="
  background-image: url({{ section.settings.banner_background_image | img_url }});
  padding-top: {{ section.settings.padding_top | default: '0px' }};
  padding-right: {{ section.settings.padding_right | default: '0px' }};
  padding-bottom: {{ section.settings.padding_bottom | default: '0px' }};
  padding-left: {{ section.settings.padding_left | default: '0px' }};
">
  <div class="content-container">
    <!-- Main Banner Title -->
    {% if section.settings.banner_title %}
    <h1 class="banner-title" style="color: {{ section.settings.banner_title_color | default: '#000' }}">{{ section.settings.banner_title }}</h1>
    {% endif %}

    <!-- Subtitle Section -->
    {% if section.settings.banner_subtitle %}
    <p class="banner-subtitle" style="color: {{ section.settings.banner_subtitle_color | default: '#000' }}">{{ section.settings.banner_subtitle }}</p>
    {% endif %}

    <!-- Loop through allowed dynamic content blocks -->
    {% for block in section.blocks %}
    {% case block.type %}
    {% when 'heading' %}
    {% if block.settings.heading %}
    <h2 class="block-heading1">{{ block.settings.heading }}</h2>
    {% endif %}
    {% when 'buttons' %}
    {% if block.settings.button_label_1 and block.settings.button_link_1 %}
    <a href="{{ block.settings.button_link_1 }}" class="btn {{ block.settings.button_style_1_class }}" style="color: {{ block.settings.button_text_color | default: '#fff' }}; background-color: {{ block.settings.button_bg_color | default: '#000' }};">
      {{ block.settings.button_label_1 }}
    </a>
    {% endif %}
    {% if block.settings.button_label_2 and block.settings.button_link_2 %}
    <a href="{{ block.settings.button_link_2 }}" class="btn {{ block.settings.button_style_2_class }}" style="color: {{ block.settings.button_text_color | default: '#fff' }}; background-color: {{ block.settings.button_bg_color | default: '#000' }};">
      {{ block.settings.button_label_2 }}
    </a>
    {% endif %}
    {% endcase %}
    {% endfor %}
  </div>
</div>

