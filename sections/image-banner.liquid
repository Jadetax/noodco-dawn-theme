<div class="image-banner" style="background-image: url({{ section.settings.banner_background_image | img_url }});">
  <div class="content-container">
    <!-- Main Banner Title -->
    {% if section.settings.banner_title %}
    <h1 class="banner-title">{{ section.settings.banner_title }}</h1>
    {% endif %}

    <!-- Subtitle Section -->
    {% if section.settings.banner_subtitle %}
    <p class="banner-subtitle">{{ section.settings.banner_subtitle }}</p>
    {% endif %}

    <!-- Loop through allowed dynamic content blocks -->
    {% for block in section.blocks %}
    {% case block.type %}
    {% when 'heading' %}
    {% if block.settings.heading %}
    <h2 class="block-heading1">{{ block.settings.heading }}</h2>
    {% endif %}
    {% when 'buttons' %}
    {% if block.settings.button_label_1 and block.settings.button_link_1 %}
    <a href="{{ block.settings.button_link_1 }}" class="btn btn-primary {% if block.settings.button_style_secondary_1 %}btn-secondary{% endif %}">
      {{ block.settings.button_label_1 }}
    </a>
    {% endif %}
    {% if block.settings.button_label_2 and block.settings.button_link_2 %}
    <a href="{{ block.settings.button_link_2 }}" class="btn btn-secondary">
      {{ block.settings.button_label_2 }}
    </a>
    {% endif %}
    {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
"name": "Image Banner",
"settings": [
{
"type": "image_picker",
"id": "banner_background_image",
"label": "Background Image"
},
{
"type": "text",
"id": "banner_title",
"label": "Banner Title",
"default": "Elegant Basin: Perfect for Modern Bathrooms"
},
{
"type": "textarea",
"id": "banner_subtitle",
"label": "Banner Subtitle",
"default": "Upgrade your bathroom today."
}
],
"blocks": [
{
"type": "heading",
"name": "Heading",
"settings": [
{
"type": "text",
"id": "heading",
"label": "Heading",
"default": "Default Heading"
}
]
},
{
"type": "text",
"name": "Text",
"settings": [
{
"type": "textarea",
"id": "text",
"label": "Text Content",
"default": "Provide some placeholder text here."
}
]
},
{
"type": "buttons",
"name": "Buttons",
"settings": [
{
"type": "text",
"id": "button_label_1",
"label": "Button Label 1",
"default": "Shop Now"
},
{
"type": "url",
"id": "button_link_1",
"label": "Button Link 1"
},
{
"type": "checkbox",
"id": "button_style_secondary_1",
"label": "Secondary Style for Button 1",
"default": false
}
]
}
],
"presets": [
{
"name": "Default",
"category": "Image",
"blocks": [
{
"type": "heading"
},
{
"type": "text"
},
{
"type": "buttons"
}
]
}
]
}
{% endschema %}
