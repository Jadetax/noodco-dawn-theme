<!DOCTYPE html>
<html lang="en">

  <head>
    {{ content_for_header }}
    <!-- Link the main CSS file -->
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ 'image-banner.css' | asset_url | stylesheet_tag }}
    
    <!-- Meta Tags for better SEO and responsiveness -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="{{ shop.meta_description | escape }}">
    <title>{{ page_title }} - {{ shop.name }}</title>
  </head>

  <body>
    <!-- Site Header Section -->
    <header class="site-header">
      <nav class="site-nav">
        <ul>
          <li><a href="{{ shop.url }}">HOME</a></li>
          <li><a href="/collections/all">CATALOG</a></li>
          <li><a href="/cart">CART</a></li>
        </ul>
      </nav>
    </header>

    <!-- React Mount Point for Cart & SPA-like features -->
    <div id="react-root"></div>

    <!-- Shopify Content Sections -->
   {{content_for_layout}}
    <!-- Site Footer Section -->
    <footer>
      <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All Rights Reserved.</p>
    </footer>

    <!-- Include JavaScript -->
    <script src="{{ 'theme.js' | asset_url }}" async></script>
  </body>
</html>
